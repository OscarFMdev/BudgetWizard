
<%= form_with model: @group, url: user_groups_path, local: true, html: {multipart: true} do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% @group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
      <% if @group.icon.attached? %>
        <%= image_tag @group.icon.variant(resize: "100x100"), class: "avatar-preview" %>
      <% else %>
        <%= image_tag 'default_product_image.webp', class: "avatar"  %>
      <% end %>
      <div class="file-input-wrapper">
        <span>Choose file</span>
        <%= f.file_field :icon, id: "user_avatar" %>
      </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary', data: { turbo: false } %>
  </div>
<% end %>

<%= link_to 'Back', user_groups_path, class: 'btn btn-secondary' %>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const iconInput = document.querySelector('#group_icon');
  const preview = document.querySelector('.avatar-preview');
  iconInput.addEventListener('change', function() {
    const file = iconInput.files[0];
    const url = URL.createObjectURL(file);
    preview.src = url;
  });
});
</script>